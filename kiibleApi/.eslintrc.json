{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb-base"
    ],
    "env": {
        "node": true,
        "browser": true
    },
    "globals": {
        "exampleGlobalVariable": true
    },
    "rules": {
        "no-console": 0,
        "no-alert": 0,
        "no-tabs": 0,
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
        "max-len": ["error", 200],
        "quotes": ["error", "double"],
        "semi": ["error", "always"]
    },
    "plugins": [
        "react"
    ]
}
